        <GroupBox Header="Steal" HorizontalAlignment="Left" Height="95" Margin="10,144,0,0" VerticalAlignment="Top" Width="443">
            <Grid Height="91" Margin="0,-6,-2,-12" VerticalAlignment="Top" RenderTransformOrigin="0.67,0.69">
                <Button Content="Steal" HorizontalAlignment="Left" Margin="10,19,0,0" VerticalAlignment="Top" Width="138" Click="Button_Click"/>
                <Button x:Name="btnStealAll" Content="Steal to all users" HorizontalAlignment="Left" Margin="285,19,0,0" VerticalAlignment="Top" Width="138" Click="btnStealAll_Click" RenderTransformOrigin="0.011,0.5"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Target" HorizontalAlignment="Left" Height="95" Margin="10,10,0,0" VerticalAlignment="Top" Width="443">
            <Grid Height="91" Margin="0,-6,-2,-12" VerticalAlignment="Top" RenderTransformOrigin="0.67,0.69">
                <ComboBox x:Name="comboBoxUser" HorizontalAlignment="Left" Margin="109,30,0,0" VerticalAlignment="Top" Width="230" SelectedValuePath="Key" DisplayMemberPath="Value"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
